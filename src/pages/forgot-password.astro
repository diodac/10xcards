---
// src/pages/forgot-password.astro
import AuthLayout from "@/layouts/AuthLayout.astro";
import ForgotPasswordForm from "@/components/auth/ForgotPasswordForm.tsx";
---

<AuthLayout title="Odzyskiwanie hasła">
  <h1 class="auth-card-title">Zapomniałeś hasła?</h1>
  <p class="mb-6 text-center text-sm text-blue-100/80">
    Podaj swój adres email, a wyślemy Ci link do zresetowania hasła.
  </p>
  <ForgotPasswordForm client:load />
  <div class="mt-6 text-center">
    <p class="text-sm text-blue-100/90">
      Pamiętasz hasło?
      <a href="/login" class="auth-link font-medium"> Zaloguj się </a>
    </p>
  </div>
</AuthLayout>
